@model List<ShoppingSolution.Models.ProductList>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cart Page</h2>
@{
    var list = (List<ShoppingSolution.Models.ProductList>)Session["cart"];
}
@{ 
    var totalPrice = 0;
    var totalQty = 0;
}

@if (list != null)
{

    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>

        @foreach (var item in list)
        {
            totalPrice = item.Price + totalPrice;
            totalQty = item.Qty + totalQty;
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>

                <td>
                    @item.Qty
                </td>
                <td>
                    @item.Price
                </td>
            </tr>
        }
        <tr>
            <td>
                Total
            </td>
            <td>
                
            </td>
            <td>
                @totalQty

            </td>
            <td>
                @totalPrice
            </td>
        </tr>
    </table>
}
else
{
    <div class="noproducts">No Products found in cart!</div>
}


